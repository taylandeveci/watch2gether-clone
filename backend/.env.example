# Environment configuration
NODE_ENV=production

# Server port (Render sets this automatically, use 5001 for local dev)
PORT=5001

# Supabase PostgreSQL Database URL (Session Pooler)
# Format: postgresql://postgres.PROJECT_REF:PASSWORD@aws-X-REGION.pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres.xxxxx:your-password@aws-0-region.pooler.supabase.com:5432/postgres

# JWT Secret (change this in production!)
JWT_SECRET=your-secret-key-change-in-production

# CORS Origin - Frontend URL
# Local dev: http://localhost:5173
# Production: https://watch2gether-clone.vercel.app
CORS_ORIGIN=https://watch2gether-clone.vercel.app

# Rate limiting configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15
